<component-set>
    <components>
        <component>
            <role>
                org.apache.maven.lifecycle.mapping.LifecycleMapping
            </role>
            <role-hint>php-nar</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <phases>
                	<validate>
                		org.phpmaven:phpnar-plugin:validate
                	</validate>
                	<pre-site>
                	</pre-site>
                    <generate-resources>
                    	org.phpmaven:phpnar-plugin:prepare-nar-info
                    </generate-resources>
                    <process-resources>
                        org.apache.maven.plugins:maven-resources-plugin:resources,
                        org.phpmaven:phpnar-plugin:copy-sdk,
                        org.phpmaven:phpnar-plugin:copy-sources
                    </process-resources>
                    <compile>
                    	org.phpmaven:phpnar-plugin:compile
                    </compile>
                    <generate-test-resources>
                    </generate-test-resources>
                    <process-test-resources>
                        org.apache.maven.plugins:maven-resources-plugin:testResources,
                    </process-test-resources>
                    <test>
                    	org.phpmaven:phpnar-plugin:test
                    </test>
                    <package>
                    	org.apache.maven.plugins:maven-jar-plugin:jar,
						org.phpmaven:phpnar-plugin:package
                    </package>
                    <install>
                        org.apache.maven.plugins:maven-install-plugin:install
                    </install>
                    <deploy>
                        org.apache.maven.plugins:maven-deploy-plugin:deploy
                    </deploy>
                </phases>
            </configuration>
        </component>
        <component>
            <role>
                org.apache.maven.artifact.handler.ArtifactHandler
            </role>
            <role-hint>php-nar</role-hint>
            <implementation>
                org.apache.maven.artifact.handler.DefaultArtifactHandler
            </implementation>
            <configuration>
                <type>php-nar</type>
                <extension>nar</extension>
                <language>php-nar</language>
                <addedToClasspath>true</addedToClasspath>
            </configuration>
        </component>
    </components>
</component-set>